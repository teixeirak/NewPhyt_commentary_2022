@article{delpierre_wood_2016,
  title = {Wood Phenology, Not Carbon Input, Controls the Interannual Variability of Wood Growth in a Temperate Oak Forest},
  author = {Delpierre, Nicolas and Berveiller, Daniel and Granda, Elena and Dufr{\^e}ne, Eric},
  year = {2016},
