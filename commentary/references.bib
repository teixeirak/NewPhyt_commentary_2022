@article{kannenberg_droughtinduced_2022,
  title = {Drought-Induced Decoupling between Carbon Uptake and Tree Growth Impacts Forest Carbon Turnover Time},
  author = {Kannenberg, Steven A. and Cabon, Antoine and Babst, Flurin and Belmecheri, Soumaya and Delpierre, Nicolas and Guerrieri, Rossella and Maxwell, Justin T. and Meinzer, Frederick C. and Moore, David J. P. and Pappas, Christoforos and Ueyama, Masahito and Ulrich, Danielle E. M. and Voelker, Steven L. and Woodruff, David R. and Anderegg, William R. L.},
  year = {2022},
